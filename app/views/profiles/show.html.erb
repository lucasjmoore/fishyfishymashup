<div>
	<% if current_user.nil? %>
		<h1> Please <%= link_to "sign up", sign_up_path %> to access this feature. We need experts like you! </h1>
	<% else %>
		<h1><%= current_user.profile_name %>'s bucket</h1>
	<% end %>
</div>
<ul>
	<% if user_signed_in? %>
		<li><%= link_to "Edit profile", edit_user_registration_path %></li>
	<% else %>
		<li><%= link_to "Sign Up", new_user_registration_path %></li>
		<li><%= link_to "Log In", new_user_session_path %></li>
	<% end %> 
</ul>
<div>

	<% if @user.fish %>
	<% @user.fish.each do |fish| %>
	 	<h2>Fish caught:</h2>
	 		<%= fish.fish_type %><br />
	 		<%= link_to time_ago_in_words(fish.created_at), fish_path(fish) %> ago
	<%= link_to 'Edit', edit_fish_path(@fish) %> |
<%= link_to 'Back', fish_index_path %>
	
	<% end %>
	<% else %>
	<p> You haven't caught any fish. How sad. You should go catch some fish. </p>
<% end %>
</div>

